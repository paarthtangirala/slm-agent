# Production Environment Configuration for SLM Personal Agent

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=phi3:mini

# Search API Configuration (add your keys)
SERPAPI_KEY=your_serpapi_key_here
BING_SEARCH_KEY=your_bing_search_key_here
SEARCH_PROVIDER=serpapi

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Security Configuration (generate strong secrets in production)
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./conversations.db

# File Upload Configuration
MAX_UPLOAD_SIZE=100MB
ALLOWED_EXTENSIONS=.pdf,.docx,.xlsx,.txt,.md,.py,.js,.png,.jpg,.jpeg

# Performance Configuration
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Cache Configuration (if using Redis)
REDIS_URL=redis://redis:6379/0
CACHE_TTL=3600

# CORS Configuration
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*